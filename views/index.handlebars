<div class="container">

    <div class="jumbotron">
        <h1 id="color-override">Welcome to the Burger Bar!</h1>
        <h3 id="color-override">Type a burger you would like to eat!</h3>
        <br>
        
        <img src="/assets/images/burger.png">
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    <button class="btn btn-warning" type="submit"  id="newburger">Submit</button>
                    {{!-- <button type="submit" class="btn btn-success"><i class="fas fa-hamburger"></i></button> --}}
                    {{!-- <script>
                        $('#addburger').submit(function () {
                            event.preventDefault();
                            $.ajax({
                                url: '/api/burger',
                                type: 'post',
                            });
                        })
                    </script> --}}
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="lefthead"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>